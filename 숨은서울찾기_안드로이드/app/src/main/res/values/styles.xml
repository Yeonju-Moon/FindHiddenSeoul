<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FindHiddenSeoulTheme" parent="Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="colorPrimary">@color/seoulYellow</item>
        <item name="colorPrimaryDark">@color/seoulYellow</item>
        <item name="colorAccent">@color/seoulYellow</item>
        <item name="android:colorBackground">@android:color/background_light</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.ActionBar">
        <item name="android:background">#ffcc00</item>
        <item name="android:textSize">300sp</item>
        <item name="android:titleTextStyle">@style/ActionBarTextColor</item>
    </style>

    <style name="ActionBarTextColor" parent="android:TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#000000</item>
    </style>
</resources>
