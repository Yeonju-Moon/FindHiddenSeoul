<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.seoulapp.findhiddenseoul.Activity.MainActivity">

    <RelativeLayout
        android:id="@+id/Main_spinner_layout"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/Main_spinner_img"
            android:layout_width="229dp"
            android:layout_height="match_parent"
            android:background="@drawable/searchbar">

            <Spinner
                android:id="@+id/Main_spinner_gu"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginBottom="2dp" />

        </RelativeLayout>

        <ImageButton
            android:id="@+id/Main_btn_guSearch"
            android:layout_width="56dp"
            android:layout_height="37dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/Main_spinner_img"
            android:background="@drawable/main_ok" />


    </RelativeLayout>

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Main_spinner_layout"
        android:layout_centerInParent="true"
        android:layout_marginTop="24dp"
        android:text="원하는 구를 선택해주세요. 숨은서울찾기를 시작합니다!"
        android:textColor="#000000"/>

    <ImageView
        android:id="@+id/Main_imgMap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/text"
        android:src="@drawable/map"/>

    <ImageButton
        android:id="@+id/Main_profile_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Main_imgMap"
        android:background="@drawable/plzlogin"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>

    <RelativeLayout
        android:id="@+id/info"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Main_imgMap"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/Main_profile_img"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginRight="10dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toRightOf="@+id/Main_profile_img">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="30dp">

                    <TextView
                        android:id="@+id/Main_profile_nick"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/Main_profile_img"
                        android:text="test"
                        android:textSize="30dp"
                        android:layout_gravity="center"
                        android:textColor="#000000"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="2dp"
                        android:layout_gravity="center">

                        <TextView
                            android:id="@+id/Main_profile_level_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Level."
                            android:textSize="17dp"
                            android:layout_marginRight="2dp"
                            android:layout_toRightOf="@+id/Main_profile_nick"
                            android:layout_alignBottom="@+id/Main_profile_nick"
                            android:textColor="#000000"/>

                        <TextView
                            android:id="@+id/Main_profile_level"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="17dp"
                            android:layout_toRightOf="@+id/Main_profile_level_text"
                            android:layout_alignBottom="@+id/Main_profile_nick"
                            android:text="0"
                            android:textColor="#000000"/>

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_gravity="center">

                        <TextView
                            android:id="@+id/Main_profile_rank_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rank. "
                            android:textColor="#000000"/>

                        <TextView
                            android:id="@+id/Main_profile_rank"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:layout_toRightOf="@id/Main_profile_rank_text"
                            android:layout_alignBottom="@+id/Main_profile_rank_text"
                            android:textColor="#000000"/>

                    </RelativeLayout>


                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

    0

</RelativeLayout>